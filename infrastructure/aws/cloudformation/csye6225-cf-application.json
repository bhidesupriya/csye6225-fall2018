{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "myAccountId": {
      "Type": "String",
      "Default": "359938524153"
    }
  },
  "Resources": {
    "Ec2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "SecurityGroupIds": [
          {
            "Ref": "csye6225Webapp"
          }
        ],
        "ImageId": "ami-9887c6e7",
        "InstanceType": "t2.micro",
        "SubnetId": "subnet-0fe62d2ef156350f6",
        "Tags": [
          {
            "Key": "Name",
            "Value": "app-stack-ec2"
          }
        ]
      }
    },
    "csye6225Webapp": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable SSH access via port 22 80 and 443",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "CSTY6225SG",
            "Value": "new-stack-1-ec2"
          }
        ],
        "VpcId": "vpc-0dc8a627ad0f4ee93"
      }
    },
    "csye6225RDS": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable SSH access via port 3306",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "3306",
            "ToPort": "3306",
            "SourceSecurityGroupId": {
              "Ref": "csye6225Webapp"
            },
            "SourceSecurityGroupOwnerId": {
              "Ref": "myAccountId"
            }
          }
        ],
        "Tags": [
          {
            "Key": "CSTY6225SG",
            "Value": "Assignment3"
          }
        ],
        "VpcId": "vpc-0dc8a627ad0f4ee93"
      }
    },
    "Dynamodb": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "TableName": "poi",
        "Tags": [
          {
            "Key": "csye6225",
            "Value": "psawale-Dynamodb"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 2,
          "WriteCapacityUnits": 2
        }
      }
    },
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketName": "csye6225-fall2018-nirmalj.me.tld.csye6225.com",
        "Tags": [
          {
            "Key": "csye6225Bucket",
            "Value": "psawaleBucket"
          }
        ]
      }
    },
    "RDS": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "AllocatedStorage": "10",
        "Engine": "MySQL",
        "DBInstanceClass": "db.t2.medium",
        "MultiAZ": "false",
        "DBInstanceIdentifier": "rshingala-csye6225-fall2018",
        "MasterUsername": "csye6225master",
        "MasterUserPassword": "csye6225password",
        "PubliclyAccessible": "false",
        "DBName": "csye6225",
        "DBSubnetGroupName": {
          "Ref": "DBsubnetGroup"
        },
        "DBSecurityGroups": [
          {
            "Ref": "csye6225RDSSG"
          }
        ]
      }
    },
    "DBsubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "RDS DB subnet group",
        "DBSubnetGroupName": "rshingala-dbSubnetGrp",
        "SubnetIds": [
          "subnet-0fe62d2ef156350f6",
          "subnet-0e528e28b88e43be0",
          "subnet-032693566ee24f369"
        ],
        "Tags": [
          {
            "Key": "csye6225",
            "Value": "Assignment4"
          }
        ]
      }
    },
    "csye6225RDSSG": {
      "Type": "AWS::RDS::DBSecurityGroup",
      "Properties": {
        "EC2VpcId": "vpc-0dc8a627ad0f4ee93",
        "DBSecurityGroupIngress": [
          {
            "EC2SecurityGroupId": {
              "Ref": "csye6225Webapp"
            }
          }
        ],
        "GroupDescription": "test",
        "Tags": [
          {
            "Key": "csye6225",
            "Value": "RDS SEcurity Group"
          }
        ]
      }
    }
  }
}
